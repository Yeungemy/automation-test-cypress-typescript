{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es5",
        "lib": ["dom", "es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "./",
        "types": [
            "cypress",
            "node",
            "cypress-file-upload",
            "@4tw/cypress-drag-drop"
        ],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "include": ["cypress/**/*.ts", "types/**/*.d.ts"],

    "exclude": ["node_modules", "**/*.spec.ts"]
}
